/**
Flatten an  array

Example:
flatten([1, [2, [3, [4, [5]]]]]) // return as [1,2,3,4,5]
**/

export default function flatten(value) {
  if (Array.isArray(value)) {
    let arr = [];

    for(let i = 0; i < value.length; i++) {
      const val = flatten(value[i]);
      if (Array.isArray(val)) {
        arr = arr.concat(val);
      }else {
        arr.push(val);
      }
    }

    return arr;
  }
  return value;
}
